#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# 读取提交信息
commit_msg=$(cat "$1")

# 定义提交信息规范：type(scope): subject
# 例如: feat(auth): add login feature
# 类型: feat, fix, docs, style, refactor, test, chore
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,100}$'

if ! echo "$commit_msg" | grep -qE "$commit_regex"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Commit message should follow the format:"
  echo "  type(scope): subject"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add user login"
  echo "  fix(api): handle null response"
  echo "  docs: update README"
  echo ""
  exit 1
fi

echo "✅ Commit message format is valid!"
